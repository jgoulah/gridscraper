# GridScraper Configuration Example
# Copy this file to config.yaml and customize

# Number of days of historical data to fetch from API (default: 90)
days_to_fetch: 90

cookies:
  # NYSEG cookies (populated by 'gridscraper login nyseg')
  nyseg: []
  nyseg_auth_token: ""
  nyseg_username: ""
  nyseg_password: ""

  # Con Edison cookies (populated by 'gridscraper login coned')
  coned: []
  coned_auth_token: ""
  coned_username: ""
  coned_password: ""
  coned_challenge_answer: ""  # Answer to security challenge question

# Home Assistant Configuration (for NYSEG)
home_assistant:
  enabled: true
  url: "http://yourdomain.local:5050"  # AppDaemon port
  token: "your-long-lived-access-token"
  entity_id: "sensor.nyseg_energy_usage_direct"

# Con Edison Home Assistant Configuration (separate instance)
coned_home_assistant:
  enabled: true
  url: "http://yourdomain.local:5050"  # AppDaemon port
  token: "your-long-lived-access-token"
  entity_id: "sensor.coned_energy_usage_direct"
